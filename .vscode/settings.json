{
    "editor.colorDecorators": false,
    "editor.formatOnPaste": false,
    "files.exclude": {
        ".venv": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/*.tmp": true
    },
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    }
}
